{
	"name": "preact-iso",
	"version": "2.3.2",
	"type": "module",
	"main": "src/index.js",
	"module": "src/index.js",
	"types": "src/index.d.ts",
	"exports": {
		".": "./src/index.js",
		"./router": "./src/router.js",
		"./lazy": "./src/lazy.js",
		"./prerender": "./src/prerender.js",
		"./hydrate": "./src/hydrate.js"
	},
	"license": "MIT",
	"description": "Isomorphic utilities for Preact",
	"author": "The Preact Authors (https://preactjs.com)",
	"repository": {
		"type": "git",
		"url": "https://github.com/preactjs/preact-iso"
	},
	"files": [
		"src",
		"LICENSE",
		"package.json",
		"README.md"
	],
	"scripts": {
		"test": "node --experimental-vm-modules node_modules/.bin/jest",
		"postinstall": "npx simple-git-hooks"
	},
	"jest": {
		"testEnvironment": "jsdom",
		"testEnvironmentOptions": {
			"customExportConditions": [
				"node",
				"node-addons"
			]
		}
	},
	"peerDependencies": {
		"preact": ">=10",
		"preact-render-to-string": ">=5"
	},
	"peerDependenciesMeta": {
		"preact-render-to-string": {
			"optional": true
		}
	},
	"prettier": {
		"singleQuote": true,
		"trailingComma": "none",
		"useTabs": true,
		"printWidth": 120,
		"arrowParens": "avoid"
	},
	"lint-staged": {
		"*.{js,ts}": [
			"prettier --write"
		],
		"*.md": [
			"prettier --write"
		],
		"*.json": [
			"prettier --write"
		]
	},
	"simple-git-hooks": {
		"pre-commit": "npx lint-staged"
	},
	"devDependencies": {
		"htm": "^3.1.1",
		"jest": "^29.7.0",
		"jest-environment-jsdom": "^29.7.0",
		"jsdom": "^22.1.0",
		"lint-staged": "^15.2.2",
		"postinstall": "^0.9.0",
		"preact": "10.15.1",
		"preact-render-to-string": "^6.2.2",
		"prettier": "^3.2.5"
	}
}
